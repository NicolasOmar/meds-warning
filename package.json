{
  "name": "meds-warning",
  "version": "0.1.0",
  "description": "A react-based web application for daily activity log of family pets",
  "author": "Nicolás Omar González Passerino",
  "license": "MIT",
  "private": false,
  "homepage": "https://meds-warning-j2hqm1kak.vercel.app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NicolasOmar/meds-warning.git"
  },
  "bugs": {
    "url": "https://github.com/NicolasOmar/meds-warning/issues"
  },
  "scripts": {
    "start": "next dev",
    "start:prod": "npm run build && next start",
    "compile": "tsc -b",
    "component": "bash component.sh",
    "build": "npm run compile && next build",
    "build:db": "npm run compile && prisma generate",
    "test": "vitest",
    "test:ci": "npm run test -- --coverage",
    "lint": "eslint",
    "prettier": "prettier {actions,prisma,ts}/**/*.ts {app,components}/**/*.tsx",
    "prettier:check": "npm run prettier -- --check",
    "prettier:fix": "npm run prettier -- --write",
    "lint-staged": "lint-staged -v",
    "update": "ncu -i --format group --doctor --doctorTest 'npm run update:doctor'",
    "update:doctor": "npm run prettier:check && npm run lint && npm run build && npm run build:db && npm run test"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "pg": "^8.16.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^20.19.27",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "npm-check-updates": "^19.2.0",
    "prettier": "^3.7.4",
    "prisma": "^7.2.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "(actions|app|components|prisma|ts)/**/*.(ts|tsx)": [
      "prettier --write",
      "eslint"
    ]
  }
}
